  <div class="container">
    <div class="row">
      <% @restaurants.each do |restaurant| %>
        <div class="col-sm-4">
          <div class="card">
            <h5 class="card-header"><%= restaurant.category %></h5>
            <div class="card-body">
              <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
              <p class="card-text"><%= restaurant.address %></p>
            </div>
          </div>
         </div>
      <% end %>
    </div>
  </div>
